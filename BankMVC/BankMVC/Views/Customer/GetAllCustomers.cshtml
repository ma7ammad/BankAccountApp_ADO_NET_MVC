@model IEnumerable<Pocos.Customer>

@{
    ViewBag.Title = "GetAllCustomers";
}

<h2>GetAllCustomers</h2>

@Html.ActionLink("Manage Customers", "Index", "Customer")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaxIDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaxIDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }) |
            @Html.ActionLink("BankAccounts", "GetAllCustomerBankAccounts", new { id = item.CustomerId }) |
        </td>
    </tr>
}

</table>

